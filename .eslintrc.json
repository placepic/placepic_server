{
    "plugins": ["prettier"],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "env": {
        "browser": false,
        "node": true,
        "es2021": true
    },
    "ignorePatterns": ["node_modules/", "dist/"],
    "rules": {
        "prettier/prettier": ["error"],
        "semi": ["error", "always"]
    }
}